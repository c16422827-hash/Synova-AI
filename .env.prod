# .ENV.PROD
# Production environment variables for Synova AI
# IMPORTANT: Replace placeholder values with actual secure values

# Core Application Settings
SECRET_KEY=generate-new-secure-secret-key-here
FERNET_KEY=generate-new-fernet-key-here
JWT_SECRET=generate-new-jwt-secret-here
ENVIRONMENT=production
DEBUG=False

# Database Settings (Railway will set DATABASE_URL automatically)
DB_NAME=synova_prod
DB_USER=synova_user
DB_PASSWORD=secure-password-here
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://synova_user:secure-password-here@db:5432/synova_prod

# Redis Settings (optional - uncomment if using Redis)
# REDIS_PASSWORD=secure-redis-password-here
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_URL=redis://:secure-redis-password-here@redis:6379/0

# Security Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGINS=https://synova-ai.vercel.app,https://www.synova-ai.vercel.app,https://yourdomain.com,https://www.yourdomain.com
SECURE_HSTS_SECONDS=31536000
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Railway Environment
RAILWAY_ENVIRONMENT=production

# Optional Settings (Uncomment and configure as needed)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password_here
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# SENTRY_DSN=your_sentry_dsn_here
